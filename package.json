{
  "name": "skillsync",
  "version": "1.0.0",
  "description": "AI Career Guidance & Learning Roadmap Platform",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && npm install && npm run build",
    "heroku-postbuild": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "vercel-build": "cd frontend && npm install && npm run build",
    "railway-start": "node backend/server.js"
  },
  "keywords": [
    "career",
    "guidance",
    "ai",
    "roadmap",
    "mern"
  ],
  "author": "SkillSync Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "@google/generative-ai": "^0.1.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "openai": "^4.8.0",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
